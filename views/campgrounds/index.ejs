<% include ../partials/header %> 
<style>
    .imag{
        height: 200px;
        max-width: auto;
    }
</style>
<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1> Welome to YessCamp</h1>
        <p>View some of the most amazing camps of india</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
        </p>
        </div>
    </header>
    
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img class="imag" src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">Show More</a>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %> 